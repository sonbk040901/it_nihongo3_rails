 <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
    <% else %>
<%= link_to "サインイン", new_user_session_path, :class => "btn sign-in" %>
<%= link_to "ユーザー登録", new_user_registration_path, :class => "btn register" %><br />
    <% end %>
        <%= yield %>
  </body>
</html>
