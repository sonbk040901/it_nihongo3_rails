    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>
    <a href='/'>HOME</a>
    <% if user_signed_in? %>
        <p>こんにちは、<%= link_to current_user.name, users_show_path %></p>
